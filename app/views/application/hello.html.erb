<% if session[:name] %>
  <h1>Hi, <%= session[:name] %>.</h1>
  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <%= submit_tag 'logout' %>
  <% end %>
<% else %>
  <h1>Hi, please login.</h1>
  <%= form_tag('/login', method: 'get') do %>
    <%= submit_tag 'login' %>
  <% end %>
<% end %>
